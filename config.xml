<?xml version='1.0' encoding='utf-8'?>
<widget id="com.amgs.factsverse" version="0.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FactsVerse</name>
    <description>Share the interesting facts with you</description>
    <author email="rakesha74@gmail.com" href="https://github.com/rakesha74/factsverse">Rakesh Agarwal</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:networkSecurityConfig="@xml/network_security_config" />
        </edit-config>
        <resource-file src="resources/android/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icon/iconfinder_globe green_ldpi.png" />
        <icon density="mdpi" src="resources/android/icon/iconfinder_globe green_mdpi.png" />
        <icon density="hdpi" src="resources/android/icon/iconfinder_globe green_hdpi.png" />
        <icon density="xhdpi" src="resources/android/icon/iconfinder_globe green_xhdpi.png" />
        <icon density="xxhdpi" src="resources/android/icon/iconfinder_globe green_xxhdpi.png" />
        <icon density="xxxhdpi" src="resources/android/icon/iconfinder_globe green_xxxhdpi.png" />
        <splash density="land-ldpi" src="resources/android/splash/factsverse_splash_land_ldpi.png" />
        <splash density="land-mdpi" src="resources/android/splash/factsverse_splash_land_mdpi.png" />
        <splash density="land-hdpi" src="resources/android/splash/factsverse_splash_land_hdpi.png" />
        <splash density="land-xhdpi" src="resources/android/splash/factsverse_splash_land_xhdpi.png" />
        <splash density="land-xxhdpi" src="resources/android/splash/factsverse_splash_land_xxhdpi.png" />
        <splash density="land-xxxhdpi" src="resources/android/splash/factsverse_splash_land_xxxhdpi.png" />
        <splash density="port-ldpi" src="resources/android/splash/factsverse_splash_port_ldpi.png" />
        <splash density="port-mdpi" src="resources/android/splash/factsverse_splash_port_mdpi.png" />
        <splash density="port-hdpi" src="resources/android/splash/factsverse_splash_port_hdpi.png" />
        <splash density="port-xhdpi" src="resources/android/splash/factsverse_splash_port_xhdpi.png" />
        <splash density="port-xxhdpi" src="resources/android/splash/factsverse_splash_port_xxhdpi.png" />
        <splash density="port-xxxhdpi" src="resources/android/splash/factsverse_splash_port_xxxhdpi.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <plugin name="cordova-plugin-device" spec="2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^4.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
</widget>
